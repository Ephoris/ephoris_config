{
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.enhancedColorization": "Enabled",
    "cmake.configureOnOpen": true,

    "workbench.statusBar.visible": true,
    "workbench.sideBar.location": "right",
    "zenMode.hideTabs": false,
    "window.zoomLevel": 0,

    "workbench.iconTheme": "material-icon-theme",
    "gruvboxMaterial.lightContrast": "hard",
    "gruvboxMaterial.lightCursor": "purple",
    "gruvboxMaterial.colorfulSyntax": true,
    "gruvboxMaterial.darkCursor":"purple",
    "gruvboxMaterial.darkContrast": "hard",
    
    "workbench.colorCustomizations": {
        "[Gruvbox Material Light]": {
            "editor.background": "#f4f4e8",
            "sideBar.background": "#f4f4e8",
            // "editor.background": "#ffffff",
            // "sideBar.background": "#ffffff",
            "activityBar.background": "#f4f4e8",
            "activityBar.foreground": "#555555",
            "contrastBorder": "#888888",
            "editorGroup.border": "#000000",
            "editor.lineHighlightBackground": "#dddddd"
        }
    },
    "editor.renderWhitespace" :"boundary",
    "editor.tabCompletion": "on",
    "editor.wordWrap" : "off",
    "editor.fontSize": 14,
    "editor.rulers": [120],
    "editor.minimap.scale": 1,
    "editor.minimap.maxColumn": 80,

    "[markdown]":{
        "editor.wordWrap": "off",
        "editor.quickSuggestions": false
    },

    "terminal.integrated.fontFamily": "Menlo for Powerline",
    "terminal.integrated.fontSize": 14,

    "vim.foldfix": true,
    "vim.ignorecase": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.textwidth": 120,
    "vim.handleKeys": {
        "<C-k>": false,
        "<C-o>": false,
    },

    "python.showStartPage": false,
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],

    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.message.update.show": false,

    "git.ignoreLegacyWarning": true,

    "remote.SSH.lockfilesInTmp": true,
    "remote.SSH.remoteServerListenOnSocket": true,
    "remote.SSH.showLoginTerminal": true,
    "remote.SSH.remotePlatform": {
        "pilaros": "linux",
        "csa2": "linux"
    },

    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },

    "autoDarkMode.darkTheme": "Gruvbox Material Dark",
    "autoDarkMode.lightTheme": "Gruvbox Material Light",
    "workbench.colorTheme": "Gruvbox Material Dark",
}